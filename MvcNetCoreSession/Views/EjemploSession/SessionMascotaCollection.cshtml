@{
    List<Mascota> mascotas = Context.Session.GetObject<List<Mascota>>("MASCOTAS");
}

<h1>Session Mascota Collection</h1>

<p>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaCollection" asp-route-accion="almacenar">Almacenar</a>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaCollection" asp-route-accion="mostrar">Mostrar</a>
</p>

<h3>@ViewData["MENSAJE"]</h3>
@if (mascotas != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Raza
                </th>
                <th>
                    Edad
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in mascotas)
            {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.Raza
                    </td>
                    <td>
                        @item.Edad
                    </td>
                </tr>
            }
        </tbody>
    </table>
}