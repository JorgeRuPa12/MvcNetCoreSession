@{
    Mascota mascota = ViewData["MASCOTA"] as Mascota;
}

<h1>Session Mascota Json</h1>

<p>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaJson" asp-route-accion="almacenar">Almacenar</a>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaJson" asp-route-accion="mostrar">Mostrar</a>
</p>

<h3>@ViewData["MENSAJE"]</h3>
@if (mascota != null){
    <h1>Nombre: @mascota.Nombre, Raza: @mascota.Raza, Edad: @mascota.Edad</h1>
}